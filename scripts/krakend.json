{
    "version": 3,
    "endpoints": [{
            "endpoint": "/movies",
            "method": "GET",
            "output_encoding": "json",
            "backend": [{
                    "url_pattern": "/movies",
                    "encoding": "json",
                    "method": "GET",
                    "host": ["http://movies-backend:8080"],
                    "is_collection": true,
                    "mapping": {
                        "collection": "movies"
                    }
                }
            ]
        }, {
            "endpoint": "/users",
            "method": "GET",
            "output_encoding": "json",
            "backend": [{
                    "url_pattern": "/users",
                    "encoding": "json",
                    "method": "GET",
                    "host": ["http://users-backend:8080"],
                    "is_collection": true,
                    "mapping": {
                        "collection": "users"
                    }
                }
            ]
        }, {
            "endpoint": "/users",
            "method": "POST",
            "output_encoding": "json",
            "backend": [{
                    "url_pattern": "/users",
                    "encoding": "json",
                    "method": "POST",
                    "host": ["http://users-backend:8080"]

                }
            ]
        }, {
            "endpoint": "/users/emails/{email}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [{
                    "url_pattern": "/users/emails/{email}",
                    "encoding": "json",
                    "method": "GET",
                    "host": ["http://users-backend:8080"]
                }
            ]
        }
    ]
}
